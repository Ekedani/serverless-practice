{
    "compilerOptions": {
        "lib": ["es2023"],
        "module": "node16",
        "target": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node16",
        "baseUrl": "./",
        "paths": {
            "@handlers/*": ["src/handlers/*"],
            "@interfaces/*": ["src/interfaces/*"],
            "@services/*": ["src/services/*"],
            "@repositories/*": ["src/repositories/*"],
            "@dto/*": ["src/dto/*"],
        }
    }
}